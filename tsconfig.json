{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "sourceMap": true,
    "allowJs": true,
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitAny": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "importHelpers": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/tests/**/*.ts"
  ]
}
